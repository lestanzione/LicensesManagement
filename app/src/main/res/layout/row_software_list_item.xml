<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/softwareListRelativeLayout"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryText"
        android:id="@+id/softwareListItemName"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="12sp"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/softwareListItemCode"
        android:layout_below="@+id/softwareListItemName"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="14sp"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/softwareListItemAux"
        android:layout_alignBottom="@+id/softwareListItemCode"
        android:layout_toRightOf="@+id/softwareListItemCode"
        android:layout_toEndOf="@+id/softwareListItemCode"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="12sp"
        android:textColor="@color/colorSecondaryText"
        android:id="@+id/softwareListItemType"
        android:layout_alignBottom="@+id/softwareListItemAux"
        android:layout_toRightOf="@+id/softwareListItemAux"
        android:layout_toEndOf="@+id/softwareListItemAux"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        android:layout_below="@id/softwareListItemCode"
        android:layout_marginTop="16dp"/>

</RelativeLayout>